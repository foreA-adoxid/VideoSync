<Window x:Class="client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Видео Клиент" Height="750" Width="1200" Background="#1E1E2F" Foreground="White" WindowStyle="None" AllowsTransparency="True" Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E88E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="Height" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Track Name="PART_Track" Height="6" VerticalAlignment="Center">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{x:Null}">
                                        <Rectangle Height="6" Fill="#4CAF50" RadiusX="3" RadiusY="3"/>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Width="15" Height="15">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="#4CAF50" Stroke="#2196F3" StrokeThickness="2"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{x:Null}">
                                        <Rectangle Height="6" Fill="#29293D" RadiusX="3" RadiusY="3"/>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#29293D" Padding="20" CornerRadius="10" Margin="10">
            <StackPanel>
                <TextBlock Text="Список видео" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                <ListBox Name="VideoList" DisplayMemberPath="Title" SelectionChanged="VideoList_SelectionChanged" Height="500" Background="#1E1E2F" BorderThickness="0"/>
                <Button Content="Выйти" Click="LogoutButton_Click" Background="#D32F2F" HorizontalAlignment="Center" Width="150"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#29293D" Padding="20" CornerRadius="10" Margin="10">
            <StackPanel>
                <TextBlock Text="Видеоплеер" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                <Border BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="10">
                    <MediaElement Name="VideoPlayer" Height="400" LoadedBehavior="Manual" UnloadedBehavior="Manual" Stretch="Uniform"/>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="▶ Play" Click="PlayButton_Click" Width="120"/>
                    <Button Content="⏸ Pause" Click="PauseButton_Click" Width="120"/>
                    <Button Content="⏹ Stop" Click="StopButton_Click" Width="120"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Name="CurrentTime" Text="0:00" FontSize="16" Margin="5"/>
                    <Slider Name="SeekBar" Minimum="0" Maximum="100" ValueChanged="SeekBar_ValueChanged" Width="500"/>
                    <TextBlock Name="TotalTime" Text="0:00" FontSize="16" Margin="5"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="🔊 Громкость:" Margin="0,0,10,0" FontSize="18"/>
                    <Slider Name="VolumeSlider" Minimum="0" Maximum="1" Value="0.5" ValueChanged="VolumeSlider_ValueChanged" Width="200"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
