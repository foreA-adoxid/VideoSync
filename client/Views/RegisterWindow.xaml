<Window x:Class="client.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="400" Width="400" Background="#1E1E2F" Foreground="White">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин" Margin="0,0,0,5"/>
            <TextBox Name="UsernameBox" Background="#29293D" BorderThickness="0" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль" Margin="0,0,0,5"/>
            <PasswordBox Name="PasswordBox" Background="#29293D" BorderThickness="0" Margin="0,0,0,10"/>

            <TextBlock Text="Повторите пароль" Margin="0,0,0,5"/>
            <PasswordBox Name="ConfirmPasswordBox" Background="#29293D" BorderThickness="0" Margin="0,0,0,20"/>

            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Background="#4CAF50" Foreground="White" Width="150" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
