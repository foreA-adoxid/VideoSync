<Window x:Class="client.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация"
        Height="300"
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#1E1E2F"
        Foreground="White">

    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2F2F3F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#AB2222"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#BB0000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#29293D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="DarkPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#29293D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="GreenButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#43A047"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BlueButtonStyle" TargetType="Button" BasedOn="{StaticResource GreenButtonStyle}">
            <Setter Property="Background" Value="#2196F3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="RootGrid"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1"
                                     Duration="0:0:0.4"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid x:Name="RootGrid" Opacity="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Background="#2F2F3F">
            <TextBlock Text="Авторизация"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       Margin="10,0"
                       FontSize="16"
                       FontWeight="Bold"/>
            <Button Content="X"
                    DockPanel.Dock="Right"
                    Style="{StaticResource CloseButtonStyle}"
                    Click="CloseButton_Click" HorizontalAlignment="Right"/>
        </DockPanel>

        <Border Grid.Row="1" CornerRadius="12" Background="#1E1E2F" Padding="20" Margin="0,0,0,-26">
            <StackPanel>
                <TextBlock Text="Добро пожаловать"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Логин" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameBox"
                         Style="{StaticResource DarkTextBoxStyle}"/>

                <TextBlock Text="Пароль" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource DarkPasswordBoxStyle}"
                             Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="RegistrButton"
                         Content="Войти"
                         Click="LoginButton_Click"
                         Width="168"
                         Height="40"
                         Background="#FF0F55E0"
                         Margin="5"
                         Style="{StaticResource GreenButtonStyle}"
                         Cursor="Hand"
                    />
                    <Button x:Name="AuthButton"
                         Content="Регистрация"
                         Click="RegisterButton_Click"
                         Width="168"
                         Height="40"
                         Background="#FFE00F0F"
                         Margin="5"
                         Style="{StaticResource GreenButtonStyle}"
                         Cursor="Hand"
                    />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
