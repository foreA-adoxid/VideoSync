<Window x:Class="client.Views.UploadVideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Загрузка видео" Height="400" Width="400" Background="#1E1E2F" Foreground="White">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Загрузка видео" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Название видео" Margin="0,0,0,5"/>
            <TextBox Name="TitleBox" Background="#29293D" BorderThickness="0" Margin="0,0,0,10"/>

            <TextBlock Text="Описание видео" Margin="0,0,0,5"/>
            <TextBox Name="DescriptionBox" Background="#29293D" BorderThickness="0" Margin="0,0,0,10"/>

            <Button Content="Выбрать файл" Click="SelectFileButton_Click" Background="#2196F3" Foreground="White" Width="150" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Name="FilePathText" Text="Файл не выбран" Foreground="Gray" HorizontalAlignment="Center"/>

            <Button Content="Загрузить видео" Click="UploadButton_Click" Background="#4CAF50" Foreground="White" Width="150" HorizontalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
